{% if sousCategories %}
    {% if sousCategories|length > 1 %}
        <option value="">Sous-catégorie</option>
        {% for sousCategorie in sousCategories %}
            <option value={{ sousCategorie.id }}>{{ sousCategorie.nom }}</option>
        {% endfor %}
    {% else %}
        {% for sousCategorie in sousCategories %}
            <option value={{ sousCategorie.id }}>{{ sousCategorie.nom }}</option>
        {% endfor %}
    {% endif %}
{% else %}
    <option value="">Sous-catégorie</option>
{% endif %}
