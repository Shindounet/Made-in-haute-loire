{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <div class="container">
        <h3>Chez {{ app.user.entreprise }}</h3>
        <div class="row">
            {% for produit in  produits %}
                <div class = "col-lg-3 col-md-6 col-sm-12 mb-4">
                    <div class="card" style="height: 420px; ">
                        {% if produit.fichiers is not empty %}
                        <a href="{{ path('modifierProduit', {'id' : produit.id } ) }}"> <img src={{ asset('img/ProduitPhoto/'~produit.fichiers[0].urlFichier) }} class="card-img-top" alt="photo-produit" height="auto"></a>
                        {% else %}
                        <a href="{{ path('modifierProduit', {'id' : produit.id } ) }}"> <img src={{ asset('img/Erreurs/notFound.png')}} class="card-img-top" alt="photo-erreur" ></a>
                        {% endif%}
                        <div class="card-body">
                            <h5 class="card-title">{{ produit.nomArticle }}</h5>
                            <p class="card-text">{{ produit.description }}</p>
                            <a href="{{ path('modifierProduit', {'id' : produit.id} ) }}" class="btn btn-primary">Modifier</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <a href={{ path('AjoutProduit') }}>Ajouter un produit</a>
        </div>
    </div>
    {% block javascripts %}
        <script src="{{ asset('Javascripts/Fichiers.js') }}"></script>
    {% endblock %}
{% endblock %}




