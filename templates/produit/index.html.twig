{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NoArticle</th>
                <th>Description</th>
                <th>Prix</th>
                <th>EtatVente</th>
                <th>Stock</th>
                <th>CodeProduit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nomArticle }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.etatVente }}</td>
                <td>{{ produit.stock }}</td>
                <td>{{ produit.codeProduit }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">Consulter</a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Pas de produit trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
