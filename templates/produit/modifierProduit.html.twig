{% extends 'base.html.twig' %}

{% block title %}Edit Produit{% endblock %}

{% block body %}
    <h3>Modifier "{{ produit.nomArticle }}"</h3>

    <div class="row">
        <div class="col-3">
            {{ include('produit/_form.html.twig', {'button_label': 'Modifier'}) }}
            <a href="{{ path('produitPartenaire', {'id' : produit.entreprise.id}) }}">Retour</a>
            {{ include('produit/_delete_form.html.twig') }}
        </div>
        <div class="col-9">
            <div class="row">
                {% for fichier in  produit.fichiers %}
                    {% if fichier != null %}
                        <div class = col-2>
                            <a href="{{ path('modifierProduit', {'id' : produit.id } ) }}"> <img src={{ asset('img/ProduitPhoto/'~fichier.urlFichier) }} alt="photo_produit" class="rounded mx-auto" width="150px" height="150 px"></a>
                            <a href="{{ path('supprimePhotoProduit' , {'id' : fichier.id}) }}" data-delete data-token="{{ csrf_token('delete'~fichier.id) }}">Supprimer</a>
                        </div>
                    {% endif%}
                {% endfor %}
            </div>
        </div>
    </div>


    {% block javascripts %}
        <script src="{{ asset('Javascripts/Fichiers.js') }}"></script>
    {% endblock %}
{% endblock %}
