{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/made-in-loire.css') }}"
          xmlns="http://www.w3.org/1999/html" title="Acceuil" xmlns="http://www.w3.org/1999/html"/>

    <div class="container">
        <h3>Chez {{ entreprise.nom }}</h3>
        <div class="row mb-2 background-section">
            <div class="col-6">
                <div>
                    <form action="" class="background-Texte"> TODO : Formulaire de filtres </form>
                </div>
            </div>
            <div class="col-6 mb-4 card">
                <div id="carouselExampleIndicators" class="carousel slide carousel-dark" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% if photosEntreprise is not empty %}
                            {% for fichier in entreprise.fichier %}
                                {% if fichier.typeFichier == "Photos_presentation_entreprise" %}
                                    {% if fichier.urlFichier == photosEntreprise[0].urlFichier  %}

                                         <div class="carousel-item active">
                                            <img src={{ asset('img/EntreprisePhoto/'~fichier.urlFichier) }} class="d-block w-100 alt="...">
                                         </div>
                                    {% else %}
                                        <div class="carousel-item">
                                             <img src={{ asset('img/EntreprisePhoto/'~fichier.urlFichier) }} class="d-block w-100 alt="...">

                                        <div class="carousel-item active">
                                            <img src="{{ asset('img/EntreprisePhoto/'~fichier.urlFichier) }}" class="d-block w-100" alt="...">
                                        </div>
                                    {% else %}
                                        <div class="carousel-item">
                                            <img src="{{ asset('img/EntreprisePhoto/'~fichier.urlFichier) }}" class="d-block w-100" alt="...">

                                        </div>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        {% else %}
                            <div class="carousel-item active">

                                <img src={{ asset('img/Erreurs/notFound.png')}} class="d-block w-100 alt="">

                                <img src="{{ asset('img/Erreurs/notFound.png')}}" class="d-block w-100" alt="">

                            </div>
                        {% endif%}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div class="card-body" >
                    <p class="cart-text">
                      {{ entreprise.description }}
                    </p>
                </div>
            </div>

        </div>
        <div class="row mb-2 background-section">
            {% for produit in  produits %}
                <div class = "col-lg-3 col-md-6 col-sm-12 mb-4">
                    <div class="card" style="height: 420px; ">
                        {% if produit.fichiers is not empty %}
                            <a href="{{ path('modifierProduit', {'id' : produit.id } ) }}"> <img src={{ asset('img/ProduitPhoto/'~produit.fichiers[0].urlFichier) }} class="card-img-top" alt="photo-produit" height="auto"></a>
                        {% else %}
                            <a href="{{ path('modifierProduit', {'id' : produit.id } ) }}"> <img src={{ asset('img/Erreurs/notFound.png')}} class="card-img-top" alt="photo-erreur" ></a>
                        {% endif%}
                        <div class="card-body">
                            <h5 class="card-title">{{ produit.nomArticle }}   </h5>
                            <p class="card-text">{{ produit.description }}</p>
                            {% if app.user.entreprise == produit.entreprise %}
                                <a href="{{ path('modifierProduit', {'id' : produit.id} ) }}" class="btn btn-primary">Modifier</a>
                            {% else %}
                                <a href="{{ path('produit_detail', {'id' : produit.id} ) }}" class="btn btn-primary">Détails</a>
                            {% endif %}
                            <b class="">{{produit.prix ~ ' €'}}</b>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div>
                {% if app.user.entreprise == entreprise %}
                    <a href="{{ path('AjoutProduit') }}" class="btn btn-primary" >Ajouter un produit</a>
                {% else %}
                    <a href="{{ path('Accueil' ) }}" class="btn btn-primary">Retour à la liste de produits</a>
                {% endif %}
            </div>
        </div>
        <div class="row background-section">
            <div class="col-6">
            </div>
            <div class = col-6>
                <h3>Entreprise basée à : </h3>
                <div class="maps">
                    <iframe src="https://www.google.com/maps/d/embed?mid=1Vp-lHS6dz1rwNdc-i4V7KSXU_cRMZOy_"
                            width="500" height="500"></iframe>
                </div>
            </div>
        </div>
    </div>
    {% block javascripts %}
        <script src="{{ asset('Javascripts/Fichiers.js') }}"></script>
    {% endblock %}
{% endblock %}
