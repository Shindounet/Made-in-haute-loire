{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/made-in-loire.css') }}"
          xmlns="http://www.w3.org/1999/html" title="Acceuil" xmlns="http://www.w3.org/1999/html"/>


    <div class="h3Vitrine">
        <h3>Chez {{ entreprise.nom }}</h3>
    </div>

        <div class="">
        <div class="row mb-2 background-section">

            <div class="col-10 mb-4 card">
                <div id="carouselExampleIndicators" class="carousel slide carousel-dark" data-bs-ride="carousel">
                    <div class="carousel-inner" >
                        {% if photosEntreprise is not empty %}
                            {% for fichier in entreprise.fichier %}
                                {% if fichier.typeFichier == "Photos_presentation_entreprise" %}
                                    {% if fichier.urlFichier == photosEntreprise[0].urlFichier  %}

                                        <div class="carousel-item active">
                                            <img src="{{ asset('img/EntreprisePhoto/'~fichier.urlFichier) }}" class="d-block w-100 img-thumbnail" alt="...">
                                            <div class="col-6">
                                                <div>
                                                    <form action="" class="background-Texte"></form>
                                                </div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <div class="carousel-item">
                                            <img src="{{ asset('img/EntreprisePhoto/'~fichier.urlFichier) }}" class="d-block w-100 img-thumbnail" alt="...">
                                            <div class="col-6">
                                                <div>
                                                    <form action="" class="background-Texte"> TODO : Formulaire de filtres </form>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        {% else %}
                            <div class="carousel-item active">
                                <img src="{{ asset('img/Erreurs/notFound.png')}}" class="d-block w-100" alt="">
                            </div>
                        {% endif%}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div class="card-body" >
                    <p class="cart-text">
                        {{ entreprise.description }}
                    </p>
                </div>
            </div>

        </div>
        <div class="row mb-2 background-section">
            {{ include('inc/__card.html.twig') }}
            {% if app.user.vendeur == false %}
                {% if app.user.entreprise == entreprise %}
                  <div> Les produits que vous ajouterez s'afficheront lorsque votre compte vendeur sera validé</div>
                {% endif %}
            {% endif %}
            <div>
                {% if  app.user%}
                    {% if app.user.entreprise == entreprise %}
                        <a href="{{ path('AjoutProduit') }}" class="btn btn-outline-primary" >Ajouter un produit</a>
                    {% else %}
                        <a href="{{ path('Accueil' ) }}" class="btn btn-primary">Retour à la liste de produits</a>
                    {% endif %}
                {% else %}
                    <a href="{{ path('Accueil' ) }}" class="btn btn-primary">Retour à la liste de produits</a>
                {% endif %}
            </div>
        </div>
        <div class="row background-section">
            <div class="col-6">
            </div>
            <div class = col-6>
                <h3>Entreprise basée à : </h3>
                <div class="maps">
                    <iframe src="https://www.google.com/maps/d/embed?mid=1Vp-lHS6dz1rwNdc-i4V7KSXU_cRMZOy_"
                            width="500" height="500"></iframe>
                </div>
            </div>
        </div>
    </div>
    {% block javascripts %}
        <script src="{{ asset('Javascripts/Fichiers.js') }}"></script>
    {% endblock %}
{% endblock %}
