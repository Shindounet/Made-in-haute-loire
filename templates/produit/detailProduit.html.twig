{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/made-in-loire.css') }}"
          xmlns="http://www.w3.org/1999/html" title="Acceuil" xmlns="http://www.w3.org/1999/html"/>

    <div class="container">

        <h3>{{ produit.entreprise }}</h3>
        <div class="row">
            {% for photo in produit.fichiers %}

                <img src={{ asset('img/ProduitPhoto/'~photo.urlFichier) }} alt="photo_entreprise" class="rounded"
                width="350" height="350">
            </div>
        <div class="descriptionProduit">
            <h5>Description du Produit</h5>
                <p>{{ produit.description }}</p>
        </div>
        {% endfor %}
        </div>
    </div>
    {% block javascripts %}
        <script src="{{ asset('Javascripts/Fichiers.js') }}"></script>
    {% endblock %}
{% endblock %}




