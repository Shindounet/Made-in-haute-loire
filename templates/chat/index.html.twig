{% extends 'base.html.twig' %}

{% block title %}Hello ChatController!{% endblock %}

{% block body %}
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

    <div class="container">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card chat-app container">
                    <div id="plist" class="people-list col-lg-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-search"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Search...">
                        </div>

                        <ul class="list-unstyled chat-list mt-2 mb-0">
                            {% for conversation in conversations %}

                                <li class="clearfix col-12">
                                    {% for utilisateur in conversation.user %}
                                        {% if utilisateur != user %}
                                            <a class="col-12" href="{{ path('app_chat_Conversation', {'id': conversation.id}) }}">
                                                <div class="col-3">
                                                    <img class="rounded-circle" src="https://thispersondoesnotexist.com/image" alt="avatar">
                                                </div>
                                                <div class="about col-9">
                                                    <div class="name">{{ utilisateur.nom}} {{ utilisateur.prenom}}</div>
                                                </div>
                                            </a>
                                        {% endif %}
                                    {% endfor %}
                                </li>
                            {% endfor %}
                        </ul>

                    </div>
                    <div class="col-lg-6">
                        {% block message %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>


    <form action="{{ path('app_chat_ping') }}" method="post">
        <button class="btn btn-primary"> Ping !</button>
    </form>


{% endblock %}
{% block javascripts %}
    <script src="{{ asset('Javascripts/mercure/test.js') }}"> </script>
{% endblock %}
